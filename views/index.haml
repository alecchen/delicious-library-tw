!!! XML
%ItemLookupResponse{:xmlns=>"http://webservices.amazon.com/AWSECommerceService/2009-07-01"}
  %Items
    %Item
      %ASIN= @data[:isbn10]
      %DetailPageURL= @data[:url]
      %ImageSets
        %ImageSet{:Category=>"primary"}
          %LargeImage
            %URL http://0.0.0.0/images/large.jpg
      %ItemAttributes
        -@data[:authors].each do |author|
          %Author= author
        %EAN= @data[:isbn13]
        %Feature= "ISBN13: #{@data[:isbn13]}"
        %ISBN= @data[:isbn10]
        %ListPrice
          %FormattedPrice= "$#{@data[:price]}"
        %ProductGroup Book
        %PublicationDate= @data[:publication_date]
        %Publisher= @data[:publisher]
        %Title= "#{@data[:title]} #{@data[:volume]}"
