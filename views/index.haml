!!! XML
%ItemLookupResponse{:xmlns => "http://webservices.amazon.com/AWSECommerceService/2009-07-01"}
  %Items
    %Item
      %ASIN
        = @isbn13
      %DetailPageURL
        = @url
      %ImageSets
        %ImageSet{:Category => "primary"}
          %LargeImage
            %URL
              = @image
            %Height{:Units => "pixels"} 500
            %Width{:Units => "pixels"} 395
      %ItemAttributes
        %Title
          = @title
        -@authors.each do |author|
          %Author= author
        %EAN= @isbn13
        %Feature= "ISBN13: #{@isbn13}"
        %ISBN= @isbn10
        %ListPrice
          %FormattedPrice= "$#{@price}"
        %ProductGroup Book
        %PublicationDate= @publication_date
        %Publichser= @publisher
